{
    "name": "nswdpc/silverstripe-structured-email",
    "description": "Structured email for Silverstripe",
    "type": "silverstripe-vendormodule",
    "keywords": [
        "silverstripe",
        "email",
        "schema.org",
        "email templates"
    ],
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "James",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "NSWDPC\\StructuredEmail\\": [
                "src/Email/",
                "src/Interfaces/",
                "src/Traits/",
                "src/Services/"
            ],
            "NSWDPC\\StructuredEmail\\Tests\\": [
                "tests/"
            ]
        }
    },
    "require": {
        "silverstripe/framework": "^5",
        "league/html-to-markdown": "^5",
        "spatie/schema-org": "^3.5",
        "nswdpc/silverstripe-taggable-notifications": "dev-ss5"
    },
    "suggest": {
        "ext-xml": "Use DOMDocument to process HTML documents",
        "ext-tidy": "Use tidy to process HTML documents"
    },
    "require-dev": {
        "cambis/silverstripe-rector": "^0.5.1",
        "phpunit/phpunit": "^9.5",
        "syntro/silverstripe-phpstan": "^5",
        "nswdpc/ci-files": "dev-v-1"
    },
    "repositories": [
        {
        "type": "git",
        "url": "https://github.com/nswdpc/ci-files.git"
        }
    ],
    "prefer-stable": true,
    "minimum-stability": "dev",
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/vendor-plugin": true,
            "silverstripe/recipe-plugin": true,
            "phpstan/extension-installer": true
        }
    }
}
