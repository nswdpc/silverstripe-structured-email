{
    "name": "nswdpc/silverstripe-structured-email",
    "description": "Structured email for Silverstripe",
    "type": "silverstripe-vendormodule",
    "keywords": [
        "silverstripe",
        "email",
        "schema.org",
        "email templates"
    ],
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "James",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "NSWDPC\\StructuredEmail\\": [
                "src/Email/",
                "src/Interfaces/",
                "src/Traits/",
                "src/Services/"
            ],
            "NSWDPC\\StructuredEmail\\Tests\\": [
                "tests/"
            ]
        }
    },
    "require": {
        "silverstripe/framework": "^6",
        "league/html-to-markdown": "^5",
        "spatie/schema-org": "^3.5"
    },
    "suggest": {
        "ext-xml": "Use DOMDocument to process HTML documents",
        "ext-tidy": "Use tidy to process HTML documents"
    },
    "require-dev": {
        "cambis/silverstripe-rector": "^2",
        "phpunit/phpunit": "^11.5",
        "cambis/silverstan": "^2",
        "nswdpc/ci-files": "dev-v-4",
        "phpstan/phpstan": "^2",
        "rector/rector": "^2",
        "phpstan/phpstan-phpunit": "^2",
        "friendsofphp/php-cs-fixer": "^3"
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/vendor-plugin": true,
            "silverstripe/recipe-plugin": true,
            "phpstan/extension-installer": true
        }
    }
}
