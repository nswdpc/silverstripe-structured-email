/* Masthead ----------------------- */

.email-masthead {
    padding: 25px 0;
    text-align: center;
    background-color : {$PrimaryColor};
    color: {$PrimaryTextColor};
}

.email-masthead .email-masthead_name p {
    margin : 0;
    padding : 25px 0 0 0;
}

.email-masthead .email-masthead_name a {
    font-size: {$FontSize};
    font-weight: bold;
    color: {$PrimaryTextColor};
    text-decoration: none;
}

.email-masthead .email-masthead_name a span {
    color: {$PrimaryTextColor}
}
